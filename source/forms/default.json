    {
      "type": "fieldset",
      "legend": "Hi",
      "elements": [
        {
          "type": "text",
          "id": "f4",
          "name": "f4",
          "validation": "required",
          "label": "hi."
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "chk",
      "name": "chk",
